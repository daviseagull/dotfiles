{
  "agent": {
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true,
    "default_model": {
      "model": "gpt-4.1",
      "provider": "copilot_chat"
    },
    "default_profile": "write",
    "default_width": 450,
    "dock": "left",
    "inline_assistant_model": {
      "model": "gpt-4.1",
      "provider": "copilot_chat"
    }
  },
  "auto_indent_on_paste": true,
  "autosave": "on_focus_change",
  "base_keymap": "VSCode",
  "buffer_font_family": "JetBrainsMonoNL Nerd Font Propo",
  "code_actions_on_format": {
    "source.organizeImports": true,
    "source.removeUnusedImports": true,
    "source.sortImports": true
  },
  "collaboration_panel": {
    "button": false
  },
  "confirm_quit": true,
  "current_line_highlight": "gutter",
  "edit_predictions": {
    "mode": "subtle"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.settings",
    "**/.turbo",
    "**/.DS_Store",
    "**/.vscode",
    "**/coverage",
    "**/dist",
    "**/.angular",
    "**/target",
    "**/node_modules",
    "**/.aws-sam",
    "**/tmp"
  ],
  "file_scan_inclusions": ["**/.env"],
  "file_types": {
    "Dockerfile": ["Dockerfile.*"]
  },
  "format_on_save": "on",
  "formatter": "prettier",
  "git_panel": {
    "default_width": 250,
    "dock": "left"
  },
  "icon_theme": {
    "dark": "Colored Zed Icons Theme Dark",
    "light": "Colored Zed Icons Theme Light",
    "mode": "system"
  },
  "notification_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "project_panel": {
    "default_width": 350,
    "dock": "right",
    "indent_size": 12,
    "scrollbar": {
      "show": "never"
    }
  },
  "scrollbar": {
    "show": "auto"
  },
  "search": {
    "button": false
  },
  "show_edit_predictions": true,
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "terminal": {
    "blinking": "on",
    "default_height": 300,
    "dock": "bottom",
    "font_family": "JetBrainsMonoNL Nerd Font Propo",
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "theme": {
    "dark": "One Dark",
    "light": "Ros√© Pine Dawn",
    "mode": "system"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  }
}
